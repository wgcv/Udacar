<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical"
            tools:context="com.udacity.ucar.FragmentAdjustments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/adjustments"
            android:id="@+id/imageView"
            android:layout_marginLeft="@dimen/side_bar_top_margin"
            android:layout_marginRight="@dimen/side_bar_top_margin"
            android:layout_marginTop="@dimen/margin_10dp"/>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/relative_layout1"
            android:layout_below="@+id/imageView"
            android:background="@drawable/border_layout"
            android:layout_marginLeft="@dimen/side_bar_top_margin"
            android:layout_marginRight="@dimen/side_bar_top_margin"
            android:layout_marginBottom="@dimen/menu_list_margin">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/bubble"
                android:id="@+id/imageView2"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/activity_vertical_margin"/>

            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/seekBar"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_vertical_margin"/>

            <ImageButton
                app:srcCompat="@drawable/plus"
                android:id="@+id/imgButton_plus"
                android:background="@android:color/white"
                android:layout_height="75dp"
                android:layout_width="75dp"
                android:layout_alignTop="@+id/imgButton_minus"
                android:layout_alignRight="@+id/seekBar"
                android:layout_alignEnd="@+id/seekBar"/>

            <ImageButton
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/minus"
                android:id="@+id/imgButton_minus"
                android:background="@android:color/white"
                android:layout_below="@+id/seekBar"
                android:layout_alignLeft="@+id/seekBar"
                android:layout_alignStart="@+id/seekBar"
                android:layout_marginTop="@dimen/activity_vertical_margin"/>
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/linear_layout2"
            android:layout_below="@+id/relative_layout1"
            android:background="@drawable/border_layout"
            android:layout_marginLeft="@dimen/side_bar_top_margin"
            android:layout_marginRight="@dimen/side_bar_top_margin"
            android:layout_marginBottom="@dimen/menu_list_margin"
            android:gravity="center">

            <ImageButton
                android:layout_height="300dp"
                app:srcCompat="@drawable/sun"
                android:id="@+id/imgButton_sun"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/menu_list_margin"/>

            <ImageButton
                android:layout_height="300dp"
                app:srcCompat="@drawable/moon_selected"
                android:id="@+id/imgButton_moon"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:layout_width="0dp"
                android:layout_marginRight="@dimen/menu_list_margin"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/linear_layout3"
            android:layout_below="@+id/linear_layout2"
            android:background="@drawable/border_layout"
            android:layout_marginLeft="@dimen/side_bar_top_margin"
            android:layout_marginRight="@dimen/side_bar_top_margin"
            android:layout_marginBottom="@dimen/menu_list_margin"
            android:gravity="center">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="300dp"
                app:srcCompat="@drawable/stop"
                android:id="@+id/imgButton_pause"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/menu_list_margin"
                android:background="@android:color/white"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/rec_selected"
                android:id="@+id/imgButton_record"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/menu_list_margin"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/linear_layout4"
            android:layout_below="@+id/linear_layout3"
            android:background="@drawable/border_layout"
            android:layout_marginLeft="@dimen/side_bar_top_margin"
            android:layout_marginRight="@dimen/side_bar_top_margin"
            android:layout_marginBottom="@dimen/menu_list_margin">
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/linear_layout5"
            android:layout_below="@+id/linear_layout4"
            android:background="@drawable/border_layout"
            android:layout_marginLeft="@dimen/side_bar_top_margin"
            android:layout_marginRight="@dimen/side_bar_top_margin"
            android:layout_marginBottom="@dimen/menu_list_margin">
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/linear_layout6"
            android:layout_below="@+id/linear_layout5"
            android:layout_marginBottom="@dimen/menu_list_margin"
            android:layout_marginLeft="@dimen/side_bar_top_margin"
            android:layout_marginRight="@dimen/side_bar_top_margin">
        </LinearLayout>
    </RelativeLayout>

</ScrollView>