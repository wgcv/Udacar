<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            tools:context="com.udacity.ucar.FragmentComfort">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/comfort"
            android:id="@+id/imageComfort"
            android:layout_marginLeft="@dimen/side_bar_top_margin"
            android:layout_marginRight="@dimen/side_bar_top_margin"
            android:layout_marginTop="@dimen/margin_10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_below="@+id/imageComfort"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_marginBottom="@dimen/menu_list_margin"
                android:background="@drawable/borderline"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/side_bar_top_margin"
                android:layout_marginLeft="@dimen/side_bar_top_margin"
                android:layout_width="wrap_content"
                android:layout_height="550dp">

                <TextView
                    android:id="@+id/tv_temp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="23 C"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/my_gray"
                    android:textSize="70sp"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="150dp"
                    android:layout_height="5dp"
                    android:layout_marginBottom="25dp"
                    android:background="@android:color/darker_gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_ac_cold"
                        android:layout_height="match_parent"
                        android:src="@drawable/shape"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_marginLeft="@dimen/menu_list_margin"/>

                    <ImageView
                        android:id="@+id/iv_btn_down"
                        android:layout_height="match_parent"
                        android:src="@drawable/downbutton"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_marginLeft="@dimen/menu_list_margin"/>

                    <ImageView
                        android:id="@+id/iv_btn_up"
                        android:layout_height="match_parent"
                        android:src="@drawable/upbutton"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_marginRight="@dimen/menu_list_margin"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"/>

                    <ImageView
                        android:id="@+id/iv_ac_warm"
                        android:layout_height="match_parent"
                        android:src="@drawable/group"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_marginRight="@dimen/menu_list_margin"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginBottom="@dimen/menu_list_margin"
                android:background="@drawable/borderline"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/side_bar_top_margin"
                android:layout_marginLeft="@dimen/side_bar_top_margin"
                android:layout_height="550dp">

                <TextView
                    android:id="@+id/tv_room_lights"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Room Lights"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/my_gray"
                    android:textSize="70sp"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="150dp"
                    android:layout_height="5dp"
                    android:layout_marginBottom="25dp"
                    android:background="@android:color/darker_gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_light_1"
                        android:layout_height="match_parent"
                        android:src="@drawable/lights_1"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/iv_light_2"
                        android:layout_height="match_parent"
                        android:src="@drawable/lights_2"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/iv_light_3"
                        android:layout_height="match_parent"
                        android:src="@drawable/lights_3"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:background="@drawable/borderline"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/side_bar_top_margin"
                android:layout_marginLeft="@dimen/side_bar_top_margin"
                android:layout_marginBottom="@dimen/menu_list_margin"
                android:layout_height="550dp">

                <TextView
                    android:id="@+id/tv_seat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Seats"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/my_gray"
                    android:textSize="70sp"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="150dp"
                    android:layout_height="5dp"
                    android:layout_marginBottom="25dp"
                    android:background="@android:color/darker_gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:id="@+id/iv_seat_pilot"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/seat_pilot"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/margin_10dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_btn_left_pilot"
                            android:src="@drawable/left_button"
                            android:elevation="1dp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>

                        <ImageView
                            android:id="@+id/iv_btn_right_pilot"
                            android:rotation="180"
                            android:src="@drawable/right_button"
                            android:elevation="1dp"
                            android:layout_marginTop="@dimen/search_bar_margin"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>
                    </LinearLayout>


                    <ImageView
                        android:id="@+id/iv_seat_copilot"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/seat_copilot"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/margin_10dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_btn_left_copilot"
                            android:src="@drawable/left_button"
                            android:elevation="1dp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>

                        <ImageView
                            android:id="@+id/iv_btn_right_copilot"
                            android:rotation="180"
                            android:src="@drawable/right_button"
                            android:elevation="1dp"
                            android:layout_marginTop="@dimen/search_bar_margin"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
